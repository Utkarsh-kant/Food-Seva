<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="Fragments.DonateFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardMaxElevation="16dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/black"
        android:background="@drawable/cooked"
        android:id="@+id/cardView_cooked">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cooked" >
        </ImageView>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardMaxElevation="16dp"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/black"
        android:background="@drawable/cooked"
        android:layout_weight="1"
        android:id="@+id/cardView_raw">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/raw"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardMaxElevation="16dp"
        android:outlineSpotShadowColor="@color/black"
        android:background="@drawable/cooked"
        android:layout_margin="10dp"
        android:id="@+id/cardView_packed">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/packed" />
    </androidx.cardview.widget.CardView>



</LinearLayout>
